<Page x:Class="AppTkani.Pages.ProductForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTkani.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
          Title="Форма продукта">
    <Grid>
        <ScrollViewer  VerticalAlignment="Center">
            <Grid HorizontalAlignment="Stretch" Margin="30 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="170"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Name="BackBtn" Click="BackBtn_Click" Content="К списку товаров" FontSize="14" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 10 0 10"/>
                <TextBlock Text="Новый товар" Grid.ColumnSpan="2" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentDanis}" Name="IDText" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Text="Наименование" Grid.Row="1" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Категория" Grid.Row="2" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Количество (на складе)" Grid.Row="3" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Единица измерения" Grid.Row="4" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Поставщик" Grid.Row="5" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Стоимость за единицу" Grid.Row="6" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Изображение" Grid.Row="7" Grid.Column="0" FontSize="14"/>
                <TextBlock Text="Подробное описание" Grid.Row="8" Grid.Column="0" FontSize="14"/>
                <Button Content="Сохранить" Name="SaveBtn" Click="SaveBtn_Click" Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>

                <TextBox Name="ProductNameInput" Text="{Binding ProductName}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <ComboBox Name="ProductCategoryInput" SelectedItem="{Binding ProductCategory}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <TextBox Name="ProductAmountInStockInput" Text="{Binding ProductQuantityInStock}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <TextBox Name="ProductUnitInput" Text="{Binding ProductUnit}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <TextBox Name="ProductManufacturerInput" Text="{Binding ProductManufacturer}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <TextBox Name="ProductCostInput" Text="{Binding ProductCost}" TextChanged="ProductCostInput_TextChanged" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5"/>
                <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1">
                    <Button Name="ProductPhotoBtn" Click="ProductPhotoBtn_Click" Width="150" FontSize="14" Margin="5" Height="30" Content="Выбрать файл"/>
                    <TextBlock Name="PhotoPathText" Text="{Binding ProductPhoto}" FontSize="14" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBox Name="ProductDescriptionInput" Text="{Binding ProductDescription}" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch" FontSize="14" Margin="5" AcceptsReturn="True" AcceptsTab="True" Height="150"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
