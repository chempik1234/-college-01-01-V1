<Page x:Class="AppTkani.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTkani.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Модуль Список товаров">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Поиск:" Margin="0 0 10 0" FontSize="24" VerticalAlignment="Center"/>
            <TextBox Name="SearchInput" FontSize="24" Width="500" TextChanged="SearchInput_TextChanged"/>
            <ComboBox Name="SortByDropDown" Margin="10 0 0 0" FontSize="24" SelectionChanged="SortByDropDown_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem>- Сортировка по цене -</ComboBoxItem>
                <ComboBoxItem>Сначала дешёвые</ComboBoxItem>
                <ComboBoxItem>Сначала дорогие</ComboBoxItem>
            </ComboBox>
            <ComboBox Name="ManufacturerDropDown" MinWidth="200" Margin="5 0 0 0" FontSize="24" SelectionChanged="ManufacturerDropDown_SelectionChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Name="AdminToolbar">
                <TextBlock Text="Выбранный товар: " FontSize="24" VerticalAlignment="Center"/>
                <Button Name="DeleteButton" Click="DeleteButton_Click" Content="Удалить" Background="Red" FontSize="24" Padding="10 5" Margin="10 0 0 0"/>
                <Button Name="EditButton" Click="EditButton_Click" Content="Изменить" Background="{StaticResource SecondaryDanis}" FontSize="24" Padding="10 5" Margin="10 0 0 0"/>
                <Button Name="AddButton" Click="AddButton_Click" Content="Создать" Background="{StaticResource AccentDanis}" FontSize="24" Padding="10 5" Margin="10 0 0 0"/>
            </StackPanel>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" FontSize="18" Text="00 / 00" Name="AmountText"/>
        </StackPanel>
            <ListView HorizontalAlignment="Stretch" Name="ProductsLV" VerticalAlignment="Stretch" Grid.Row="1">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="{StaticResource ResourceKey=SecondaryDanis}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ProductQuantityInStock}" Value="0">
                                <Setter Property="Background" Value="Gray"/>
                            </DataTrigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentDanis}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent" HorizontalAlignment="Stretch" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}}">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding PhotoPath}" Height="247" Width="280" Margin="10" Stretch="Fill" />
                                <!--, TargetNullValue=Resources/picture.png-->
                                <Border Grid.Column="1" Background="White" Margin="10" Padding="5 0 0 0" HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontWeight="Bold" Text="{Binding ProductName}" FontSize="24"/>
                                    <TextBlock Text="{Binding ProductCategory}" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                    <TextBlock FontWeight="SemiBold" Text="{Binding ProductArticleNumber}" FontSize="22" Foreground="DarkRed"/>
                                        <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="{Binding ProductDescription}" FontSize="20"/>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                        <TextBlock FontWeight="Normal" Text="Производитель:" FontSize="20" Margin="0 0 10 0"/>
                                        <TextBlock FontWeight="Normal" Text="{Binding ProductManufacturer}" FontSize="20"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                            <TextBlock FontWeight="Normal" Text="Цена:" FontSize="20" Margin="0 0 10 0"/>
                                            <TextBlock FontWeight="Normal" Text="{Binding ProductCostActual}" FontSize="35" Foreground="{StaticResource AccentDanis}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                            <TextBlock FontWeight="Normal" Text="Текущая скидка:" FontSize="20"/>
                                            <TextBlock FontWeight="Normal" Text="{Binding ProductDiscountAmount}" Margin="10 0 0 0" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                            <TextBlock FontWeight="Normal" Text="%" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                            <TextBlock FontWeight="Normal" Text="Максимальная скидка:" Margin="15 0 0 0" FontSize="20"/>
                                            <TextBlock FontWeight="Normal" Text="{Binding ProductDiscountMax}" Margin="10 0 0 0" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                            <TextBlock FontWeight="Normal" Text="%" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="2" Background="White" Margin="10" Padding="5">
                                    <StackPanel Orientation="Vertical" Margin="10 0">
                                        <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="Остаток на складе:" FontSize="20"/>
                                        <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="{Binding ProductQuantityInStock}" FontSize="50" Foreground="{StaticResource AccentDanis}"/>
                                        <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="Единица измерения:" FontSize="20" Margin="0 0 0 10"/>
                                        <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="{Binding ProductUnit}" FontSize="24" Foreground="{StaticResource AccentDanis}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </Grid>
</Page>
