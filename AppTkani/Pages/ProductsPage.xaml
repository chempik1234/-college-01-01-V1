<Page x:Class="AppTkani.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTkani.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Модуль Список товаров">

    <Grid>
        <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="ProductsLV">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource SecondaryDanis}" HorizontalAlignment="Stretch" Height="200">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding PhotoPath}" Margin="10" Stretch="Uniform" />
                            <!--, TargetNullValue=Resources/picture.png-->
                            <Border Grid.Column="1" Background="White" Margin="10" Padding="5 0 0 0" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontWeight="Bold" Text="{Binding ProductName}" FontSize="24"/>
                                    <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="{Binding ProductDescription}" FontSize="20"/>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                        <TextBlock FontWeight="Normal" Text="Производитель:" FontSize="20" Margin="0 0 10 0"/>
                                        <TextBlock FontWeight="Normal" Text="{Binding ProductManufacturer}" FontSize="20"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                        <TextBlock FontWeight="Normal" Text="Цена:" FontSize="20" Margin="0 0 10 0"/>
                                        <TextBlock FontWeight="Normal" Text="{Binding ProductCostActual}" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                                        <TextBlock FontWeight="Normal" Text="Текущая скидка:" FontSize="20"/>
                                        <TextBlock FontWeight="Normal" Text="{Binding ProductDiscountAmount}" Margin="10 0 0 0" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                        <TextBlock FontWeight="Normal" Text="%" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                        <TextBlock FontWeight="Normal" Text="Максимальная скидка:" Margin="15 0 0 0" FontSize="20"/>
                                        <TextBlock FontWeight="Normal" Text="{Binding ProductDiscountMax}" Margin="10 0 0 0" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                        <TextBlock FontWeight="Normal" Text="%" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="2" Background="White" Margin="10" Padding="5">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="Остаток на складе:" FontSize="20" Margin="0 0 10 0"/>
                                    <TextBlock FontWeight="Normal" TextWrapping="Wrap" Text="{Binding ProductQuantityInStock}" FontSize="20" Foreground="{StaticResource AccentDanis}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
